@using LanguageResource
@model Ishop.Models.ForgotPasswordViewModel
@{ 
    ViewBag.Title = Lang.Account_ForgotPassword_Title; 
}
<div class="container">
    <br/>
    <h2>@ViewBag.Title</h2>
    <hr/>
    <div class="container">
        @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()

            <div id="box-widget" class="box box-solid box-default">
                <div class="box-header with-border">
                    <h3 class="box-title">@Lang.Account_ForgotPassword_ByEmail</h3>
                    <div class="box-tools pull-right">
                        <span class="label label-default"><i class="glyphicon glyphicon-indent-right" aria-hidden="true"></i> Email</span><button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    </div><!-- /.box-tools -->
                </div><!-- /.box-header -->
                <div class="box-body">
                    <div class="form-group"> 
                        <div class="col-md-offset-2 col-md-10">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = Html.DisplayNameFor(m => m.Email) })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" id="SendEmailCode" class="btn box-default" value="@Lang.Account_ForgotPassword_SendEmailCode" />
                             
                        </div>
                    </div>
                </div><!-- /.box-body -->
            </div><!-- /.box -->

        }
    </div> 

    @Html.Partial("ForgotByPhone")

</div>
 





