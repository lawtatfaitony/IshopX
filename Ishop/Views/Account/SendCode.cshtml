@using LanguageResource
@model Ishop.Models.SendCodeViewModel
@{
    ViewBag.Title = Lang.Account_SendCode_Title;
}
 
<div class="container">
    <br />
    <h2>@ViewBag.Title</h2>
    <hr />
    <div class="container">
        @using (Html.BeginForm("SendCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken() 
            @Html.Hidden("rememberMe", @Model.RememberMe)

            <div class="box box-solid box-default">
                <div class="box-header with-border">
                    <h3 class="box-title">@Lang.Account_SendCode_DefinitedTag_SecurityProtected</h3>
                    <div class="box-tools pull-right">
                        <span class="label label-default"><i class="fa fa-lock" aria-hidden="true"></i> Scurity</span>
                    </div><!-- /.box-tools -->
                </div><!-- /.box-header -->
                <div class="box-body">
                    <div class="form-group">
                        <label class = "col-md-2 ">@Lang.Account_SendCode_DefinitedTag_ProTectedMode</label>  
                        <div class="col-md-10">
                           @Html.DropDownListFor(model => model.SelectedProvider, Model.Providers,new { @class= "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                         <p>&nbsp;&nbsp;&nbsp;</p>
                    </div>
                    <div class="form-group"> 
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" class="btn btn-default" value="@Lang.Views_GeneralUI_Submit" />
                        </div>
                    </div>
                </div><!-- /.box-body -->
            </div><!-- /.box -->

        }
    </div>

</div>