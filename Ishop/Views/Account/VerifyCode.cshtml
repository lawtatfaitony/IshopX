@using LanguageResource
@model Ishop.Models.VerifyCodeViewModel
@{
    ViewBag.Title =Lang.Account_VerifyCode_Title;
}
<div class="container">
    <br />
    <h2>@ViewBag.Title</h2>
    <hr />
    <div class="container">
        @using (Html.BeginForm("VerifyCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
           @Html.AntiForgeryToken()
            @Html.Hidden("provider", @Model.Provider)
            @Html.Hidden("rememberMe", @Model.RememberMe)

            <div class="box box-solid box-default">
                <div class="box-header with-border">
                    <h3 class="box-title">@Lang.Account_VerifyCode_DefinitedTag_SecurityProtected</h3>
                    <div class="box-tools pull-right">
                        <span class="label label-default"><i class="fa fa-lock" aria-hidden="true"></i> Scurity</span>
                    </div><!-- /.box-tools -->
                </div><!-- /.box-header -->
                <div class="box-body">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Code, new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Code, new { @class = "form-control" ,style="max-width:120px;" })
                        </div>
                    </div>
                    <div class="form-group">
                        
                        <div class="col-sm-offset-2 col-sm-10">
                             @Html.LabelFor(m => m.RememberBrowser) 
                             @Html.CheckBoxFor(m => m.RememberBrowser, new { @class = "icheckbox_flat" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <ul class="list-unstyled list-group">
                                <li>
                                    @Html.ValidationSummary("", new { @class = "text-danger" })
                                </li>
                                <li>
                                    <input type="submit" class="btn btn-default" value="@Lang.Views_GeneralUI_Submit" />
                                </li>
                            </ul>
                            
                            
                        </div>
                    </div>
                </div><!-- /.box-body -->
            </div><!-- /.box -->

        }
    </div>
 
</div>