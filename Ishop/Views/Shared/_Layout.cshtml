<body class="hold-transition sidebar-mini body-content" style="height:100%">
    @Html.Partial("~/Views/Shared/ShopHeaderTemplate/" + WebCookie.ShpID + "_LayOutHeader." + (string)ViewBag.LanguageCode + ".cshtml", Client_Shop)
    <div id="mainbody" class="container-fluid" style="padding-top:50px;padding-left:0px;padding-right:0px;padding-bottom:5px;min-height:100%">
        @RenderBody()
    </div>
    <div id="footer" class="container">
        @Html.Partial("~/Views/Shared/ShopFootTemplate/" + WebCookie.ShpID + "_FooterTemplate.cshtml", Client_Shop)
    </div>

   
    <script>
        $(function () {
            //设置鼠标悬停展开下拉菜单
            function dropdownOpen() {
                //鼠标悬停时展开子菜单
                $('.dropdown').mouseover(function () {
                    $(this).addClass('show');
                    //查找当前元素子节点中的对象，修改其class，这样
                    //这样当有多个下拉菜单时，可以分别独立处理，而不会出现都下拉的bug
                    $(this).find(".dropdown-menu").addClass('show');

                }).mouseout(function () { //鼠标不悬停时折叠子菜单
                    $(this).find(".dropdown-menu").removeClass('show');
                    $(this).removeClass('show');
                });
            }
            //调用函数，这里一定要进行调用，否则的话会不生效
            dropdownOpen();
        });
    </script>
</body>
</html> 
