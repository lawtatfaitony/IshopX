@using LanguageResource
@using Ishop.Context
@model Ishop.Models.PubDataModal.Language

@Styles.Render("~/AdminLTE/plugins/bootstrap-wysiwyg/css")
@Scripts.Render("~/AdminLTE/plugins/bootstrap-wysiwyg/js")
<link href="~/webuploader/CSS/webuploader.css" rel="stylesheet" />
<script src="~/webuploader/Script/webuploader.js"></script>

@{
    ViewBag.Title = Lang.ModalView_LangDetail_Title;
    ViewBag.SubTitle = Lang.ModalView_LangDetail_SubTitle;
}
@using (Ajax.BeginForm("LangDetail", null, new { KeyName = ViewBag.KeyName }, new AjaxOptions { HttpMethod = "post", OnSuccess = "HandleLangSuccDialog", OnFailure = "errLang", LoadingElementId = "Loading" }, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.KeyName, new { Value = ViewBag.KeyName })
    @Html.HiddenFor(model => model.KeyType)
    <div class="box box-info">
        <div id="Loading" class="hidden"><i class="fa fa-circle-o-notch fa-spin fa-3x fa-fw"></i><span class="sr-only">Loading...</span></div>

