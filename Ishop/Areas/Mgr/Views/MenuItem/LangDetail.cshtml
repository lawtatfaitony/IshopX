        <div class="box-footer col-sm-offset-2">
            <ul class="list-inline list-unstyled">
                <li>
                    <button type="button" id="btnUpdate" class="btn btn-info ">
                        @Lang.Views_GeneralUI_Change
                    </button>
                </li>
                @{
                    if (Request["KeyName"] != null)
                    {
                        @:<li>
                            @Html.ActionLink(Lang.Views_GeneralUI_Reflash, "LangDetail", new { KeyName = ViewBag.KeyName }, new { @class = "btn btn-info" })
                        @:</li>
                    }
                }
                <li>
                    @Html.ActionLink(Lang.Views_GeneralUI_Return, "LangList", null, new { @class = "btn btn-info" })
                </li>
            </ul>
        </div>
    </div>
}

<script>
    $(document).ready(function () {
        // Submit to Update
        $("#btnUpdate").click(function () {
            return BootstrapDialog.show({
                cssClass: 'bootstrap-dialog fade',
                title: $("#KeyName").val(),
                message: $("#zh_HK").val(),
                buttons: [{
                    label: '@Lang.Views_GeneralUI_Submit',
                    action: function (dialog) {
                        console.log("Submit....");
                        $("#btnUpdate").submit();
                        dialog.close();
                    }
                }, {
                    label: '@Lang.Views_GeneralUI_Cancel',
                    action: function (dialog) {
                        dialog.close();
                        return false;
                    }
                }]
            });//BootstrapDialog

        }); // click
    });
    function HandleLangSuccDialog(data) {
        if (data.MsgCode === "1") {
            BootstrapDialog.alert(data.Message);
        }
        else {
            BootstrapDialog.alert(data.Message);
        } 
    }
    function errSeoHtmlContextAdd(data) {
        BootstrapDialog.alert('error');
    }
</script>

