                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.fr, new { @class = "form-control", data_toggle = "tooltip", placeHolder = "fr", title = "fr" })
                    @Html.ValidationMessageFor(model => model.fr, "", new { @class = "text-danger" })
                </div>
            </div>

