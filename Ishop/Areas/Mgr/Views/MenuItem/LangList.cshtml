@using Ishop.Utilities;
@using Ishop.Context;
@using PagedList;
@using PagedList.Mvc;
@using LanguageResource;
@model PagedList.IPagedList<Ishop.Models.PubDataModal.Language>
@{ 
            ViewBag.Title = Lang.ModalView_MenuItem_LangList_Title;
            ViewBag.SubTitle = Lang.ModalView_MenuItem_LangList_SubTitle;
}
<style>
    .min {
        min-width: 80px;
        max-width: 160px;
    }
    .text-omit1 {
        text-overflow: ellipsis;
        overflow: hidden;
        white-space: nowrap;
        width: 280px;
    }

    .text-omit2 {
        min-width:80px;
        width: 280px;
        word-break: break-all;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .text-omit-defined {
        overflow: hidden;
        text-overflow: clip;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
    }
</style>

@using (Html.BeginForm("LangList", "MenuItem", FormMethod.Get, new { @class = "form-horizontal" }))
{
    <div id="box-widget" class="box-header form-inline block">
        @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "form-control", placeholder = Lang.Views_GeneralUI_InputKeyWord, style = "max-width:120px;" })
        <input type="submit" class="btn btn-info" value="@Lang.Views_GeneralUI_Search" />
    </div>
}
<div class="box-body table-responsive">
    <table class="table table-striped table-hover">
        <tr>
            <th class="min">
                <i class="fa fa-caret-square-o-right" aria-hidden="true" style="color:mediumslateblue">&nbsp;</i><lable>@Html.DisplayNameFor(modelItem => modelItem.First().KeyName)</lable>
                <i class="fa fa-up" aria-hidden="true" style="color:mediumslateblue">&nbsp;</i>
                @Html.ActionLink(" ", "LangList", "MenuItem", new { sortOrder = ViewBag.DateSortParm, currentFilter = ViewBag.CurrentFilter }, htmlAttributes: new { @class = "fa fa-sort" })
            </th>
            <th class="hidden-sm ">
                <span><i class="fa fa-caret-square-o-right" aria-hidden="true" style="color:mediumslateblue;word-break:keep-all"></i><lable style="word-break:keep-all" title="@Html.DisplayNameFor(modelItem => modelItem.First().zh_HK)" data-toggle="tooltip" data-placement="top" class="min">@Html.DisplayNameFor(modelItem => modelItem.First().zh_HK)</lable></span>
            </th>
            <th class="hidden-sm ">
                <span><i class="fa fa-caret-square-o-right" aria-hidden="true" style="color:mediumslateblue;word-break:keep-all"></i><lable style="word-break:keep-all" title="@Html.DisplayNameFor(modelItem => modelItem.First().en)" data-toggle="tooltip" data-placement="top" class="min">@Html.DisplayNameFor(modelItem => modelItem.First().en)</lable></span>
            </th>
            <th class="hidden-sm ">
                <span><i class="fa fa-caret-square-o-right" aria-hidden="true" style="color:mediumslateblue;word-break:keep-all"></i><lable style="word-break:keep-all" title="@Html.DisplayNameFor(modelItem => modelItem.First().zh)" data-toggle="tooltip" data-placement="top" class="min">@Html.DisplayNameFor(modelItem => modelItem.First().zh)</lable></span>
            </th>
            <th class="hidden-sm ">
                <span><i class="fa fa-caret-square-o-right" aria-hidden="true" style="color:mediumslateblue;word-break:keep-all"></i><lable style="word-break:keep-all" title="@Html.DisplayNameFor(modelItem => modelItem.First().zh_CN)" data-toggle="tooltip" data-placement="top" class="min">@Html.DisplayNameFor(modelItem => modelItem.First().zh_CN)</lable></span>
            </th>
            <th class="hidden-sm ">
                <span><i class="fa fa-caret-square-o-right" aria-hidden="true" style="color:mediumslateblue"></i><lable>@Html.DisplayNameFor(modelItem => modelItem.First().ru)</lable></span>
            </th>
            <th class="hidden-sm ">
                <span><i class="fa fa-caret-square-o-right" aria-hidden="true" style="color:mediumslateblue"></i><lable>@Html.DisplayNameFor(modelItem => modelItem.First().fr)</lable></span>
            </th>
            <th class="hidden-sm ">
                <span><i class="fa fa-caret-square-o-right" aria-hidden="true" style="color:mediumslateblue"></i><lable>@Html.DisplayNameFor(modelItem => modelItem.First().de)</lable></span>
            </th>
            <th class="hidden-sm ">
                <span><i class="fa fa-caret-square-o-right" aria-hidden="true" style="color:mediumslateblue">&nbsp;</i><lable>@Html.DisplayNameFor(modelItem => modelItem.First().ar)</lable></span>
            </th>
            <th class="hidden-sm ">
                <span><i class="fa fa-caret-square-o-right" aria-hidden="true" style="color:mediumslateblue">&nbsp;</i><lable>@Html.DisplayNameFor(modelItem => modelItem.First().es)</lable></span>
            </th>
            <th class="hidden-sm ">
                <span><i class="fa fa-caret-square-o-right" aria-hidden="true" style="color:mediumslateblue">&nbsp;</i><lable>@Html.DisplayNameFor(modelItem => modelItem.First().ja)</lable></span>
            </th>
            <th class="hidden-sm ">
                <span><i class="fa fa-caret-square-o-right" aria-hidden="true" style="color:mediumslateblue">&nbsp;</i><lable>@Html.DisplayNameFor(modelItem => modelItem.First().ko)</lable></span>
            </th>
            <th>
                <span><i class="fa fa-share-alt-square" aria-hidden="true" style="color:mediumslateblue">&nbsp;</i><lable class="block" style="word-break:keep-all">@Lang.Views_GeneralUI_Details</lable></span>
            </th>
        </tr>
        @foreach (var item in Model)
        {
        <tr>
            <td class="no-padding">
                <div style="margin:0,0,5px,0; max-width:350px;">
                    <div>
                        <span class="text-omit2 h6" style="margin-left:5px 0 0 5px;" title="@item.KeyName" data-toggle="tooltip">
                            @Html.DisplayFor(modelItem => item.KeyName, new { @class = "small" })
                        </span>
                        <span class="text-omit2 h6" style="margin-left:5px 0 0 5px;" title="@item.KeyType" data-toggle="tooltip">
                            @Html.DisplayFor(modelItem => item.KeyType, new { @class = "small" })
                        </span>
                    </div>
                </div>
            </td>
            <td class="hidden-sm">
                <span title="@item.zh_HK" class="text-omit-defined min" data-toggle="tooltip">@Html.DisplayFor(modelItem => item.zh_HK)</span>
            </td>
            <td class="hidden-sm">
                <span class="text-omit2 min" title="@item.en" data-toggle="tooltip">
                    @Html.DisplayFor(modelItem => item.en, new { @class = "small" })
                </span>
            </td>

            <td class="hidden-sm">
                <span class="text-omit-defined min" title="@item.zh" data-toggle="tooltip">
                    @Html.DisplayFor(modelItem => item.zh, new { @class = "small" })
                </span>
            </td>
            <td class="hidden-sm">
                <span title="@item.zh_CN" class="text-omit-defined min" data-toggle="tooltip">@Html.DisplayFor(modelItem => item.zh_CN)</span>
            </td>
            <td class="hidden-sm">
                <span class="text-omit-defined min" title="@item.ru" data-toggle="tooltip">
                    @Html.DisplayFor(modelItem => item.ru, new { @class = "small" })
                </span>
            </td>
            <td class="hidden-sm">
                <span class="text-omit-defined min" title="@item.fr" data-toggle="tooltip">
                    @Html.DisplayFor(modelItem => item.fr, new { @class = "small" })
                </span>
            </td>
            <td class="hidden-sm small">
                <span class="text-omit-defined min" title="@item.de" data-toggle="tooltip">
                    @Html.DisplayFor(modelItem => item.de, new { @class = "small" })
                </span>
            </td>
            <td class="hidden-sm small">
                <span class="text-omit-defined min" title="@item.ar" data-toggle="tooltip">
                    @Html.DisplayFor(modelItem => item.ar, new { @class = "small" })
                </span>
            </td>
            <td class="hidden-sm small">
                <span class="text-omit-defined min" title="@item.es" data-toggle="tooltip">
                    @Html.DisplayFor(modelItem => item.es, new { @class = "small" })
                </span>
            </td>
            <td class="hidden-sm small">
                <span class="text-omit-defined min" title="@item.ja" data-toggle="tooltip">
                    @Html.DisplayFor(modelItem => item.ja, new { @class = "small" })
                </span>
            </td>
            <td class="hidden-sm small">
                <span class="text-omit-defined min" title="@item.ko" data-toggle="tooltip">
                    @Html.DisplayFor(modelItem => item.ko, new { @class = "small" })
                </span>
            </td>
            <td>
                <div class="block inline">
                    @Html.ActionLink(Lang.Views_GeneralUI_Edit, "LangDetail", new { KeyName = item.KeyName }, new { @class = "fa fa-pencil", style = "min-width:60px;color:mediumslateblue;word-wrap:normal;word-break:keep-all" })
                </div>
            </td>
        </tr>
        }
    </table>
</div>

@if (Model.PageCount > 1)
{
    <label>@string.Format(Lang.GeneralUI_PagerInfo, Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber, Model.PageCount, Model.Count)</label>
    @Html.PagedListPager(Model, page => Url.Action("LangList", new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
}

<script>
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
        }); 
</script>




