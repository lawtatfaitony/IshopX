@using LanguageResource;
@using Ishop.Context;
@using PagedList;
@using PagedList.Mvc;
@using Ishop.Models.PubDataModal;
@model PagedList.IPagedList<SourceStatistic>
@{
    Layout = null;
}
<script src="~/js/Info/IPstatitics.js"></script>

<li class="dropdown notifications-menu">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <i class="fa fa-bell-o"></i>
        <span class="label label-warning">@ViewBag.UserViewsCount</span>
    </a>
    <ul class="dropdown-menu">
        <li class="header">@String.Format(Lang.SourceStatisticByRecomm_UserViews, ViewBag.UserViewsCount);</li>
        <li>
            <ul class="menu">
                @foreach (var item in Model)
                {
                    if (item.VisitorIcon != string.Empty)
                    {
                        <li>
                            <img src="@item.VisitorIcon" class="img-responsive" width="50">@item.SourceArea
                            <span style="padding-left:5px;padding-right:5px;">|</span>@item.LastUpdateDate
                        </li>
                    }
                    else
                    {
                        <li>
                            <i class="fa fa-users text-aqua"></i> @item.SourceArea
                            <span style="padding-left:5px;padding-right:5px;">|</span>@item.LastUpdateDate
                        </li>
                    }

                }
            </ul>
        </li>
        <li class="footer"><a href="/Mgr/Info/InfoIPstatitics">View all</a></li>
    </ul>
</li>

