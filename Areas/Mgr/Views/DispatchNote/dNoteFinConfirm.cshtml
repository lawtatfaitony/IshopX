@using System.Net
@using Ishop.Models
@using LanguageResource
@using Ishop.Models.ProductMgr
@using Ishop.Utilities
@model Ishop.Models.ProductMgr.DispatchNoteModalView
 
<!-- Modal for 财务授权-->
<div class="modal fade" id="myModalDispatchNoteId_@Html.DisplayFor(m => m.DispatchNoteId)" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <span class="modal-title h4" title="@Lang.DispatchNoteModalView_DefinitedTag_FinanceAuthorize" data-toggle="tooltip" id="myModal_header_lbl_title">@Lang.DispatchNoteModalView_DefinitedTag_FinanceAuthorize</span>
                <label ID="myModal_AspNetRolese_UserId" class="h6" style="color:#d8d5d5"></label>
            </div>
            <div class="modal-body"> 
                    @using (Ajax.BeginForm("dNoteFinConfirm", "DispatchNote", new { DispatchNoteId = Html.DisplayFor(m=>m.DispatchNoteId) }, new AjaxOptions { HttpMethod = "post", OnSuccess = "HandledNoteFinConfirmSuccDialog", OnFailure = "errdNoteFinConfirm", LoadingElementId = "Loading" }))
                    {
                        <!-- DispatchNoteId OrderID Quantity RecommUserId  CreatedDate -->
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary("", new { @class = "text-danger", id = "ValidationSummary1" })
                        @Html.HiddenFor(m => m.DispatchNoteId)

                        <div class="form-group">
                            @Html.LabelFor(m => m.DispatchNoteStatus, new { @class = "control-label" }) &nbsp;&nbsp;
                        </div>
                        <div class="form-group"> 
                                @Html.EnumDropDownListFor(m => m.DispatchNoteStatus, htmlAttributes: new { @class = "form-control" }) 
                        </div>
                        <div class="form-group" style="padding-top:20px;">
                            <br />
                            <button type="submit" id="BtnDispatchNoteStatusSubmit" class="btn btn-danger btn-flat">@Lang.Views_GeneralUI_Submit</button>
                        </div>
                    } 
            </div>
            
        </div>
    </div>
</div>
 

